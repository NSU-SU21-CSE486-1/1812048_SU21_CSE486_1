<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UniClubz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/inder</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_button_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/themered</item>


    </style>
    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="button_theme" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/themered</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="card_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">130dp</item>
        <item name="backgroundTint">@color/themered</item>
    </style>


</resources>